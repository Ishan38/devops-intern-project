pipeline {
    agent any

    environment {
        IMAGE_NAME = 'devops-intern-project'
        DOCKER_REGISTRY = 'yourdockerhubusername/devops-intern-project'
    }

    stages {
        stage('Clone Code') {
            steps {
                git 'https://github.com/maaaaanas/devops-intern-project.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    dockerImage = docker.build("${IMAGE_NAME}")
                }
            }
        }
